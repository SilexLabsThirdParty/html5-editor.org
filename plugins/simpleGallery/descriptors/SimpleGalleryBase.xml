<?xml version="1.0" encoding="utf-8"?>
<componentDescriptor version="1.0">
	<componentName>SimpleGalleryBase</componentName>
	<className>org.silex.ui.SimpleGalleryBase</className>
	<parentDescriptorClassName>flash.MovieClip</parentDescriptorClassName>
	<componentRoot>main</componentRoot>
	<properties>
		<width>
			<type>Float</type>
			<minValue>0</minValue>
			<maxValue>2880</maxValue>
			<description>PROPERTIES_LABEL_WIDTH</description>
			<defaultValue>550</defaultValue>
			<isRegistered>true</isRegistered>
			<group>attributes</group>
		</width>	
		<height>
			<type>Float</type>
			<minValue>0</minValue>
			<maxValue>2880</maxValue>
			<description>PROPERTIES_LABEL_HEIGHT</description>	
			<defaultValue>400</defaultValue>
			<isRegistered>true</isRegistered>
			<group>attributes</group>		
		</height>
		<transitionType>
			<type>String</type>
			<subType>Enum</subType>
			<values>Fade,Swipe,Zoom</values>
			<description>PROPERTIES_LABEL_TRANSITION_TYPE</description>
			<defaultValue>Fade</defaultValue>
		</transitionType>
		<transitionDuration>
			<type>Float</type>
			<description>PROPERTIES_LABEL_TRANSITION_DURATION</description>
			<defaultValue>1</defaultValue>
			<minValue>0</minValue>
		</transitionDuration>
		<autoPlay>
			<type>Boolean</type>
			<description>PROPERTIES_LABEL_AUTOPLAY</description>
			<defaultValue>false</defaultValue>
		</autoPlay>
		<autoPlayDuration>
			<type>Float</type>
			<description>PROPERTIES_LABEL_AUTOPLAY_DURATION</description>
			<defaultValue>5</defaultValue>
			<minValue>0.1</minValue>
		</autoPlayDuration>
		<loop>
			<type>Boolean</type>
			<description>PROPERTIES_LABEL_LOOP</description>
			<defaultValue>false</defaultValue>
		</loop>
		<controlsVerticalAlign>
			<type>String</type>
			<subType>Enum</subType>
			<values>top,middle,bottom</values>
			<defaultValue>middle</defaultValue>
			<description>PROPERTIES_LABEL_CONTROLS_VERTICAL_ALIGN</description>
		</controlsVerticalAlign>
		<showControls>
			<type>Boolean</type>
			<description>PROPERTIES_LABEL_SHOW_CONTROLS</description>
			<defaultValue>true</defaultValue>
		</showControls>
		<showLoading>
			<type>Boolean</type>
			<description>PROPERTIES_LABEL_SHOW_LOADER</description>
			<defaultValue>true</defaultValue>
		</showLoading>
		<showBackground>
			<type>Boolean</type>
			<description>PROPERTIES_LABEL_SHOW_BACKGROUND</description>
			<defaultValue>true</defaultValue>
		</showBackground>
		<backgroundColor>
			<type>Integer</type>
			<subType>Color</subType>
			<description>PROPERTIES_LABEL_BACKGROUND_COLOR</description>
			<defaultValue>0x000000</defaultValue>
		</backgroundColor>
		<scaleMode>
			<type>String</type>
			<subType>Enum</subType>
			<values>exactfit,noscale,fill</values>
			<defaultValue>exactfit</defaultValue>
			<description>PROPERTIES_LABEL_SCALE_MODE</description>
		</scaleMode>
		<urls>
			<type>Array</type>
			<subType>String</subType>
			<description>PROPERTIES_LABEL_URLS_ARRAY</description>
			<defaultValue>media/simplegallery/silex1.jpg,media/simplegallery/silex2.jpg,media/simplegallery/silex3.jpg</defaultValue>
		</urls>
	</properties>
</componentDescriptor>